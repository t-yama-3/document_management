.main
  = render partial: 'shared/menu'
  .mainWrap
    .mainContent
      .mainContent__title
        = icon 'fas', 'envelope'
        = 'メールBOX'
      .mainBtn
        = link_to received_mail_users_path, class: :"mainBtn__link#{@add_class1}" do
          = icon 'fas', 'inbox'
          = '受信メール'
        = link_to send_mail_users_path, class: :"mainBtn__link#{@add_class2}" do
          = icon 'far', 'paper-plane'
          = '送信メール'
      .mainSelect
        = render partial: 'shared/messages_list', locals: {messages: @messages}
    = render partial: 'shared/side'
