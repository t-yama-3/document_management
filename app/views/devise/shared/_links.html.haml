- if controller_name != 'sessions'
  .devise__options
    = link_to new_session_path(resource_name), class: :'devise__options--link' do
      = icon "fas", "sign-in-alt"
      = "ログイン画面へ"
- if devise_mapping.registerable? && controller_name != 'registrations'
  .devise__options
    = link_to new_registration_path(resource_name), class: :'devise__options--link' do
      = icon 'fas', 'user-plus'
      = "新規登録画面へ"
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  .devise__options
    = link_to new_password_path(resource_name), class: :'devise__options--link' do
      = icon "fas", "unlock"
      = "パスワードを忘れた方はこちらへ"
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  .devise__options
    = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: :'devise__options--link'
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  .devise__options
    = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: :'devise__options--link'
- if devise_mapping.omniauthable?
  .devise__options
    - resource_class.omniauth_providers.each do |provider|
      = link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: :'devise__options--link'
