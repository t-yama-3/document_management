.main
  = render partial: 'shared/menu'
  .mainWrap
    .mainContent
      - @sections.each do |section|
        .mainContentSection
          .mainContentSection__title
            = link_to section_path(section.id), class: :mainContentSection__link do
              = section.section_name
            = render partial: 'shared/documents', locals: {documents: section.documents.limit(5)}
            -# - (section.documents.limit(5)).each do |document|
            -#   = render partial: 'shared/documents', locals: {document: document}
    = render partial: 'shared/side'
