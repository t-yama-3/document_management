.details
  .detailsWrap
    .detailsContent
      .detailsContent__area
        %iframe{src: @document.src, class: :detailsContent__view}
    .detailsSide
      .detailsSide__url
        = "元サイトリンク："
        = link_to @document.title, @document.src, class: :'detailsSide__url--link'
      = link_to "文書情報を編集する", edit_document_path(@document.id), class: :detailsSide__link
      = link_to "文書情報を削除する", document_path(@document.id), method: :delete, class: :detailsSide__link, data: {confirm: "削除しますか？"}
      %table.detailsTable
        %tr
          %th.detailsTable__th 区分名
          - if @document.section.present?
            %td.detailsTable__td= @document.section.section_name
          - else
            %td.detailsTable__td= '（未登録）'
        %tr
          %th.detailsTable__th 文書名
          %td.detailsTable__td= @document.title
        %tr
          %th.detailsTable__th 説明
          %td.detailsTable__td= @document.note
      .detailsComment

